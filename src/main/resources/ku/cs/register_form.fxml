<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.app.controllers.accountOrganizer.RegisterFormController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/regis.png" />
         </image>
      </ImageView>
      <TextField fx:id="usernameTextField" layoutX="346.0" layoutY="167.0" prefHeight="39.0" prefWidth="258.0" promptText="Enter username" styleClass="transparent" stylesheets="@../../cssStyle/style.css" />
      <TextField fx:id="nameTextField" layoutX="346.0" layoutY="342.0" prefHeight="39.0" prefWidth="258.0" promptText="Enter name" styleClass="transparent" stylesheets="@../../cssStyle/style.css" />
      <TextField fx:id="surnameTextField" layoutX="346.0" layoutY="399.0" prefHeight="39.0" prefWidth="258.0" promptText="Enter surname" styleClass="transparent" stylesheets="@../../cssStyle/style.css" />
      <Button layoutX="607.0" layoutY="487.0" mnemonicParsing="false" onAction="#handleCreateID" prefHeight="50.0" prefWidth="81.0" styleClass="transparent" stylesheets="@../../cssStyle/style.css">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button layoutX="711.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="39.0" prefWidth="75.0" styleClass="transparent" stylesheets="@../../cssStyle/style.css" textFill="#84a98c">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <PasswordField fx:id="passwordTextField" layoutX="346.0" layoutY="225.0" prefHeight="39.0" prefWidth="258.0" promptText="Enter Password" styleClass="transparent" stylesheets="@../../cssStyle/style.css" />
      <Label fx:id="errorMsgLabel" layoutX="233.0" layoutY="419.0" textFill="RED">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button layoutX="222.0" layoutY="499.0" mnemonicParsing="false" onAction="#chooseImageButton" styleClass="userPassword" stylesheets="@../../cssStyle/style.css" text="Choose Image">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <ImageView fx:id="image" fitHeight="113.0" fitWidth="147.0" layoutX="346.0" layoutY="450.0" pickOnBounds="true" preserveRatio="true" />
      <PasswordField fx:id="confirmTextField" layoutX="346.0" layoutY="287.0" prefHeight="39.0" prefWidth="258.0" promptText="Confirm password" styleClass="transparent" stylesheets="@../../cssStyle/style.css" />
   </children>
</AnchorPane>
