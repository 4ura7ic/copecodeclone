         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="currentPasswordTextField" layoutX="333.0" layoutY="222.0" promptText="Enter current password" styleClass="userPassword" />
      <PasswordField fx:id="newPasswordTextField" layoutX="333.0" layoutY="287.0" promptText="Enter new password" styleClass="userPassword" />
      <PasswordField fx:id="confirmPasswordTextField" layoutX="333.0" layoutY="329.0" promptText="Re-enter new password" styleClass="userPassword" />
      <Pane prefHeight="43.0" prefWidth="800.0" style="-fx-background-color: #272929;">
         <children>
            <Button layoutX="21.0" layoutY="9.0" mnemonicParsing="false" onAction="#handleBackButton" styleClass="backButton" stylesheets="@../../cssStyle/style.css" text="Back">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
