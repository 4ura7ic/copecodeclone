<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: 585b5d;" styleClass="mainBG" stylesheets="@../../cssStyle/style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.app.controllers.accountOrganizer.ResetPasswordFormController">
   <children>
      <Label layoutX="339.0" layoutY="131.0" text="Reset Password">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TextField fx:id="usernameTextField" layoutX="333.0" layoutY="181.0" promptText="Enter username" styleClass="userPassword" />
      <Label layoutX="261.0" layoutY="185.0" text="Username:" />
      <Label layoutX="224.0" layoutY="226.0" text="Current Password:" />
      <Label layoutX="240.0" layoutY="291.0" text="New Password:" />
      <Label layoutX="223.0" layoutY="333.0" text="Confirm Password:" />
      <Button layoutX="385.0" layoutY="382.0" mnemonicParsing="false" onAction="#handleResetButton" text="Reset" />
