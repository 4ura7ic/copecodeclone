         <image>
            <Image url="@images/reset.png" />
         </image>
      </ImageView>
      <TextField fx:id="usernameTextField" layoutX="341.0" layoutY="174.0" prefHeight="40.0" prefWidth="265.0" promptText="Enter username" styleClass="transparent" />
      <Label fx:id="errorMsgLabel" layoutX="205.0" layoutY="418.0" prefHeight="150.0" prefWidth="344.0" textFill="RED">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="currentPasswordTextField" layoutX="341.0" layoutY="260.0" prefHeight="40.0" prefWidth="266.0" promptText="Enter current password" styleClass="transparent" />
